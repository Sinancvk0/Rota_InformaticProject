
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div>
    <div class="card">
        <div class="card-header text-white bg-danger bg-gradient">
            <span class="fs-4">Referanslar</span>
            <a href="#" id="btnEkle" class="btn btn-warning ms-2">Yeni Firma Ekle</a>
        </div>
        <div class="card-body">
            <table id="serviceTable" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Firma Adı</th>
                        <th>Görsel</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog"
     aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Referance Bölümü</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="mb-3">
                        <label class="form-label">Firma Ad</label>
                        <input type="text" id="txtName" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Görsel</label>
                        <input type="file" id="fileImage" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                <a href="#" id="btnSave" class="btn btn-primary">Kaydet</a>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $("#btnEkle").click(function () {
            $("#modalTitle").text("Hizmet Bölümü");
            $("#btnSave").text("Kaydet").removeClass('btn-success').addClass('btn-primary');
            $("#txtName").val("");

       

            $("#txtImage").val("");

            $("#modal").modal('show');

            // Kaydet düğmesi tıklama olayı
            $("#btnSave").off().click(function () {

                if ($("#txtName").val().trim() === '' ) {
                    Swal.fire(
                        'Hata!',
                        'Lütfen tüm alanları doldurun.',
                        'error'
                    );
                    return;
                }

                let veri = {
                    title: $("#txtName").val(),
           

                };

                let fileData = new FormData();
                fileData.append('title', veri.title);

                fileData.append('description', veri.description);

                fileData.append("image", $("#fileImage")[0].files[0]);

                $.ajax({
                    type: 'POST',
                    url: '/Admin/Referance/Add',
                    data: fileData,
                    contentType: false,
                    processData: false,
                    success: function (res) {
                        $("#modal").modal('hide');
                        $("#txtName").val("");


                        $("#txtImage").val("");
                        $('#serviceTable').DataTable().ajax.reload();
                    },
                    error: function (error) {
                        Swal.fire(
                            'Hata!',
                            'Veri kaydetme işlemi başarısız oldu. Hata: ' + error.statusText,
                            'error'
                        );
                    }
                });
            });
        });

        var dataTable = $('#serviceTable').DataTable({
            ajax: {
                url: '/Admin/Referance/GetAll',
                dataSrc: ''
            },
            columns: [
                { data: 'id' },
                { data: 'title' },
               
                {

                    data: 'image',
                    "render": function (data) {
                        return `<img src="${data}" class="img-thumbnail" width="50" height="100" alt="Görsel">`;
                    }

                },
                {
                    data: null,
                    render: function (data, type, row) {
                        return `<a href="#" onclick="deleteRef('${row.id}')" class="btn btn-sm btn-danger">Sil</a>
                            <a href="#" onclick="editService('${row.id}')" class="btn btn-sm btn-primary">Düzenle</a>`;
                    }

                }
            ]
        });
    });

    function deleteRef(id) {
        Swal.fire({
            title: 'Silmek istediğinize emin misiniz?',
            text: "Müşteri Silinecek",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Sil!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: 'POST',
                    url: '/Admin/Referance/Delete',
                    data: { id: id },
                    success: function () {
                        Swal.fire(
                            'Başarılı!',
                            'Kullanıcı Silindi',
                            'success'
                        );
                        $('#serviceTable').DataTable().ajax.reload();
                    },
                    error: function () {
                        Swal.fire({
                            icon: 'error',
                            title: 'Hizmet Silme İşlemi Başarısız!',
                            text: 'Bir şeyler yanlış gitti!'
                        });
                    }
                });
            }
        });
    }

</script>