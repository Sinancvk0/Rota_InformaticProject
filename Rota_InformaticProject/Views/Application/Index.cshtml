@model Rota_InformaticProject.Models.ApplicationViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Testimonial area start here -->
<section class="testimonial-area bg-image pt-120 pb-120" data-background="~/assets/images/bg/testimonial-bg.png">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-6 wow fadeInLeft" data-wow-delay="200ms" data-wow-duration="1500ms">
                <div class="talk-us__item">
                    <div class="section-header mb-30">
                        <h5 class="text-white">
                        </h5>
                        <h2 class="text-white">Teklif Formu </h2>
                    </div>
                    <form id="contact-form" method="post" action="/Application/Index">
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label for="name">İsim Soyisim</label>
                                <input type="text" asp-for="FullName" id="name" placeholder="Name" required>
                            </div>
                            <div class="col-sm-6">
                                <label for="email">Email Adresi</label>
                                <input type="email" asp-for="Email" id="email" placeholder="info@example.com" required>
                            </div>
                            <div class="col-sm-6">
                                <label for="subject">Şirket İsmi</label>
                                <input type="text" asp-for="CompanyName" id="subject" placeholder="Company Name">
                            </div>
                            <div class="col-sm-6">
                                <label for="number">Telefon Numarası</label>
                                <input type="text" asp-for="Phone" id="number" placeholder="+90123456789" required>
                            </div>
                            <div class="col-12">
                                <label for="massage">Mesajınız*</label>
                                <textarea asp-for="Body" id="massage" placeholder="Message..." required></textarea>
                            </div>
                        </div>
                        <button type="submit">Gönder</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 ps-2 ps-lg-5">
                <div class="section-header mb-40">
                    <h5 class="wow fadeInUp" data-wow-delay="00ms" data-wow-duration="1500ms">
                        <img class="me-1" src="~/assets/images/icon/section-title.png" alt="icon">
                        Rota Yazılım ve bilişim hizmetleri
                    </h5>

                    <p class="wow fadeInUp" data-wow-delay="400ms" data-wow-duration="1500ms">
                        Rota Yazılım ve Bilişim Hizmetleri olarak, geniş hizmet yelpazemiz ile iş süreçlerinizi optimize etmek için buradayız. ETA yazılımları yetkili bayisi olarak, aynı zamanda yazılım geliştirme, bilgi teknolojileri danışmanlığı ve veri tabanı yönetimi konularında da uzman kadromuzla hizmet veriyoruz.
                        <br />
                        Lütfen yan tarafta bulunan  formu doldurarak ihtiyaçlarınızı bize iletin. Uzman ekibimiz, taleplerinizi değerlendirerek size en uygun çözüm ve teklifleri sunmak için en kısa sürede sizinle iletişime geçecektir.
                    </p>
                </div>

            </div>
        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- SweetAlert2 CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelector('#contact-form').addEventListener('submit', function (e) {
            e.preventDefault();

            const formData = new FormData(this);

            fetch('/Application/Index', {
                method: 'POST',
                body: formData
            })
                .then(response => {
                    if (response.ok) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Teşekkürler!',
                            text: 'Mesajınız iletilmiştir en kısa süre içerisinde tarafınıza bilgi verilecektir.',
                            showConfirmButton: false,
                            timer: 6000
                        });

                        this.reset();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: 'Bir hata oluştu, lütfen tekrar deneyin.',
                            showConfirmButton: false,
                            timer: 2000
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'Bir hata oluştu, lütfen tekrar deneyin.',
                        showConfirmButton: false,
                        timer: 2000
                    });
                });
        });
    });
</script>
